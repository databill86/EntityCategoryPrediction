{
  "dataset_reader": {
    "type": "mention_categories",
    "tokenizer": {
      "type": "word"
    },
    "token_indexers": {
      "tokens": "single_id"
    }
  },
  "train_data_path": "./data/fake_data.tsv",
  "validation_data_path": "data/fake_data.tsv",
  "evaluate_on_test": true,
  "model": {
    "type": "category_predictor",
    "text_embedder": {
      "type": "basic",
      "token_embedders": {
        "tokens": {
          "type": "fasttext-embedder",
          "model_path": "./data/gensim_fake_ft.model",
          "model_params_path": "./data/gensim_fake_ft.model.params",
          "trainable": true
        }
      }
    }
  },
  "iterator": {
    "type": "basic",
    "batch_size": 4
  },
  "trainer": {
    "optimizer": {
      "type": "adam",
      "lr": 0.01
    },
    "should_log_learning_rate": true,
    "num_epochs": 1,
    "model_save_interval": 100,
    "learning_rate_scheduler": {
      "type": "reduce_on_plateau",
      "factor": 0.5,
      "patience": 5,
      "verbose": true
    }
  },
  "vocabulary": {
//    "directory_path": "./data/vocabulary/"
  }
}