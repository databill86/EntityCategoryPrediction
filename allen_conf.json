{
  "dataset_reader": {
    "type": "mention_categories",
    "tokenizer": {
      "type": "word"
    },
    "token_indexers": {
      "tokens": "single_id",
      "tokens2": "single_id"
    }
  },
  "train_data_path": "./data/fake_data_train.tsv",
  "validation_data_path": "data/fake_data_valid.tsv",
  "evaluate_on_test": true,
  "model": {
    "type": "category_predictor",
    "text_embedder": {
      "type": "basic",
      "token_embedders": {
        "tokens": {
          "type": "fasttext-embedder",
          "model_path": "./data/gensim_fake_ft.model",
          "model_params_path": "./data/gensim_fake_ft.model.params",
          "trainable": false,
          "force_cpu": false
        },
        "tokens2": {
          "type": "embedding",
          "embedding_dim": 10,
          "trainable": true
        }
      }
    },
    "encoder": {
      "type": "lstm",
      "input_size": 40,
      "hidden_size": 20,
      "num_layers": 1,
      "dropout": 0.5,
      "bidirectional": true
    },
    "seq_combiner": {
      "type": "attention-combiner",
      "num_layers": 2,
      "input_state_dim": 40,
      "encoded_seq_dim": 40,
      "output_dim": 40,
      "dropout": 0.2,
      "attention": {
        "type": "linear",
        "tensor_1_dim": 40,
        "tensor_2_dim": 40
      }
    }
  },
  "iterator": {
    "type": "basic",
    "batch_size": 4
  },
  "trainer": {
    "optimizer": {
      "type": "adam",
      "lr": 0.04
    },
    "should_log_learning_rate": true,
    "num_epochs": 5,
    "model_save_interval": 100,
    "learning_rate_scheduler": {
      "type": "reduce_on_plateau",
      "factor": 0.5,
      "patience": 5,
      "verbose": true
    }
  },
  "vocabulary": {
    "directory_path": "./data/vocabulary/"
  }
}